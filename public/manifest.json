{
  "name": "Nullstack Chrome Extension",
  "description": "Nullstack Chrome Extension Sample",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "icons": {
    "72": "/icon-72x72.png",
    "96": "/icon-96x96.png",
    "128": "/icon-128x128.png",
    "144": "/icon-144x144.png",
    "152": "/icon-152x152.png",
    "180": "/icon-180x180.png",
    "192": "/icon-192x192.png",
    "384": "/icon-384x384.png",
    "512": "/icon-512x512.png"
  }
}